<menudetailedrecording x="0" y="0" width="100%" height="100%" fadetime="0" scaletvx="{areawidth}*0.01" scaletvy="{areaheight}*0.6975" scaletvwidth="{areawidth}*0.2275" scaletvheight="{areaheight}*0.2275">

    <background>
	 <area x="0" y="0" width="100%" height="100%" layer="1">
            <!-- top bar -->
            <drawrectangle x="0" y="0" width="{areawidth}" height="10%" color="{clrBackground}" />
            <!-- menu bar -->
            <drawrectangle x="0" y="10%" width="99%" height="81%" color="{clrBackground}" />
            <drawrectangle x="{areawidth}*0.99 - 2" y="12%" width="2" height="76%" color="{clrBorder}" />
